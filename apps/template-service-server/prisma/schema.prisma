datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Component {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  properties Json?
  typeField  String?
  updatedAt  DateTime @updatedAt
}

model Template {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model ApiIntegration {
  apiKey    String?
  createdAt DateTime                     @default(now())
  id        String                       @id @default(cuid())
  name      String?
  typeField EnumApiIntegrationTypeField?
  updatedAt DateTime                     @updatedAt
  user      User?                        @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  apiIntegrations ApiIntegration[]
  createdAt       DateTime         @default(now())
  email           String?          @unique
  firstName       String?
  id              String           @id @default(cuid())
  lastName        String?
  password        String
  roles           Json
  templates       Template[]
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

enum EnumApiIntegrationTypeField {
  Option1
}
